{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3Access",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::enterprise-lite-*",
        "arn:aws:s3:::enterprise-lite-*/*"
      ]
    },
    {
      "Sid": "S3CreateBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:PutBucketVersioning",
        "s3:PutBucketTagging",
        "s3:PutPublicAccessBlock"
      ],
      "Resource": "arn:aws:s3:::enterprise-lite-*"
    },
    {
      "Sid": "DynamoDBAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:ap-southeast-1:*:table/Companies",
        "arn:aws:dynamodb:ap-southeast-1:*:table/Personas",
        "arn:aws:dynamodb:ap-southeast-1:*:table/PersonasConfig",
        "arn:aws:dynamodb:ap-southeast-1:*:table/Transcripts",
        "arn:aws:dynamodb:ap-southeast-1:*:table/Analytics",
        "arn:aws:dynamodb:ap-southeast-1:*:table/LinkTracking"
      ]
    },
    {
      "Sid": "CognitoAccess",
      "Effect": "Allow",
      "Action": [
        "cognito-idp:AdminGetUser",
        "cognito-idp:AdminCreateUser",
        "cognito-idp:AdminDeleteUser",
        "cognito-idp:AdminUpdateUserAttributes",
        "cognito-idp:AdminInitiateAuth",
        "cognito-idp:AdminRespondToAuthChallenge"
      ],
      "Resource": "arn:aws:cognito-idp:ap-southeast-1:*:userpool/*"
    },
    {
      "Sid": "FirehoseAccess",
      "Effect": "Allow",
      "Action": [
        "firehose:PutRecord",
        "firehose:PutRecordBatch"
      ],
      "Resource": "arn:aws:firehose:ap-southeast-1:*:deliverystream/enterprise-lite-*"
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:ap-southeast-1:*:log-group:/aws/apprunner/*"
    }
  ]
}




